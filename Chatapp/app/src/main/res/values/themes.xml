<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Chatapp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary color scheme - Controls most colored UI elements -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary color scheme - Used for floating action buttons, selection controls, etc -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar styling (visible at top of screen on Android devices) -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Background colors for different surface types -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="cardBackgroundColor">@color/light_card</item>
        <item name="android:colorBackground">@color/white</item>
        
        <!-- TextAppearance styles to address Material Component requirements -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MaterialComponents.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MaterialComponents.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MaterialComponents.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MaterialComponents.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MaterialComponents.Overline</item>
    </style>
    
    <!-- Theme for Settings activity -->
    <style name="SettingsTheme" parent="Theme.Chatapp">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <!-- Theme for Profile activity-->
    <style name="ProfileTheme" parent="Theme.Chatapp">
        <item name="android:windowBackground">@color/white</item>
    </style>
    
    <!-- Theme for New Chat activity -->
    <style name="NewChatTheme" parent="Theme.Chatapp">
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>